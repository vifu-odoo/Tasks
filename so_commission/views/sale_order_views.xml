<?xml version="1.0"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="so_commission"/>
            </xpath>        
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
                <field name="line_commission" column_invisible="parent.so_commission==False" />
            </xpath>
            <xpath expr="//field[@name='tax_totals']" position="before">
                <field name="total_commission" widget="monetary"/>
            </xpath> 
            <field name="tax_totals"
                widget="account-tax-totals-field"
                t-esc="{'totals': amount_untaxed}" />

        </field>
    </record>
</odoo>

